{
  "Cors": {
    "FrontendUrl": "https://localhost:7052"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/landalf-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Using": [ "Serilog.Sinks.OpenTelemetry" ],
    "_WriteTo_OpenTelemetry_comment": "Uncomment the section below and add it to the WriteTo array to enable OTLP export to Seq, Grafana Loki, or any OpenTelemetry Collector",
    "_WriteTo_OpenTelemetry_example": {
      "Name": "OpenTelemetry",
      "Args": {
        "Endpoint": "http://localhost:4317",
        "Protocol": "Grpc",
        "ResourceAttributes": {
          "service.name": "landalf-api"
        }
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "AllowedHosts": "*"
}
